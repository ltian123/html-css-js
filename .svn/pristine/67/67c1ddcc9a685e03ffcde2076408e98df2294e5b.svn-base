<!DOCTYPE html>
<html>
  <head>
    <title>数组方法</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <script type="text/javascript">
    	function f1(){
    		var arr = [1,"ba",5,"aa","ab",4];
    		arr.sort();
//     		arr.reverse();
    		alert(arr);
    	}
    	
    	function f2(){
    		var arr1 = [1,2,4];
    		var arr2 = [3,7,9];
    		var arr = arr1.concat(arr2);
    		alert(arr);
//     		arr = arr.slice(1, 3);
//     		alert(typeof arr);
//     		alert("截取后的数组为:"+arr);
			arr = arr.slice(3);
    		alert(typeof arr);
    		alert("截取后的数组为:"+arr);
			
    	}
    	
    	function f3(){
    		var arr = [1,3,6,8];
    		var s = arr.toString();
//     		var s = arr.join();
//     		var s = arr.join("-");
    		alert(s);
//     		alert(typeof arr);
    		alert(typeof s);
    	}
    </script>
  </head>
  <body>
    <input type="button" value="测试1" onclick="f1()">
    <input type="button" value="测试2" onclick="f2()">
    <input type="button" value="测试3" onclick="f3()">
  </body>
</html>
