<!DOCTYPE html>
<html>
  <head>
    <title>反选</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <script type="text/javascript">
    	function unSelect(){
    		var emps = document.getElementsByName("emp");
    		for(var i = 0; i < emps.length; i++){
    			if(emps[i].checked==true){
    				emps[i].checked=false;
    			}else{
    				emps[i].checked=true;
    			}
    		}
    	}
    </script>
  </head>
  <body>
    <table border="1">
    	<tr>
    		<td><input type="checkbox" onclick="unSelect()"></td>
    		<th>姓名</th>
    		<th>工资</th>
    		<th>操作</th>
    	</tr>
    	<tr>
    		<td><input type="checkbox" name="emp"/></td>
    		<td>张三</td>
    		<td>5000.0</td>
    		<td>
    			<a href="javaScript:;">删除</a>
    		</td>
    	</tr>
    	<tr>
    		<td><input type="checkbox" name="emp"/></td>
    		<td>李四</td>
    		<td>6000.0</td>
    		<td>
    			<a href="javaScript:;">删除</a>
    		</td>
    	</tr>
    	<tr>
    		<td><input type="checkbox" name="emp"/></td>
    		<td>王五</td>
    		<td>8000.0</td>
    		<td>
    			<a href="javaScript:;">删除</a>
    		</td>
    	</tr>
    
    </table>
  </body>
</html>
